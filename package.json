    "@prisma/client": "^7.2.0",
    "@swc/cli": "^0.7.9",
    "bcryptjs": "^3.0.3",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.3.3",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
